page{
  background: rgb(232, 255, 251);
}

.bg_test {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: -1;
  opacity: 0.5;
  
}

.search{
  display: flex;
  align-items: center;
  border: 1rpx solid #e0e0e0;
  margin: 20rpx;
  padding: 20rpx;
  border-radius: 10rpx;
  box-shadow: 0 0 5rpx #e0e0e0;
}

.search image{
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.notebook{
  border: 1rpx solid #e0e0e0;
  margin: 20rpx;
  border-radius: 10rpx;
  box-shadow: 0 0 5rpx #e0e0e0;
}

.notebook .item{
  display: flex;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #e0e0e0;
}

/* 下边框线 */
.notebook .item:last-child{
  border-bottom: 0rpx;

}
.notebook .item text{
  flex: 1;
  margin-left: 20rpx;
  color: #444444;
  /* font-size: 28rpx; */

}

.notebook .item.completed text{
color: #888888;
text-decoration: line-through;
  /* font-size: 28rpx; */

}

.footer{
  display: flex;
  justify-content: space-between;
  margin: 20rpx;
  font-size: 28rpx;
  color: gray;
}

.zero{
  margin-top: 30rpx;
  margin-left: 20rpx;
  color: #888888;
  font-style: oblique;
  font-size: 28rpx;
}


